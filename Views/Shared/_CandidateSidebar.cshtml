@{
    var currentPath = Context.Request.Path.Value?.ToLower() ?? "";
}

<aside class="sidebar">
    <div class="brand">
        <div class="brand-icon">
            <svg width="24" height="24" viewBox="0 0 32 32" fill="none">
                <path d="M16 2L28 9V23L16 30L4 23V9L16 2Z" stroke="url(#grad)" stroke-width="2" fill="none"/>
                <path d="M16 8L22 11.5V18.5L16 22L10 18.5V11.5L16 8Z" fill="url(#grad)"/>
                <defs>
                    <linearGradient id="grad" x1="4" y1="2" x2="28" y2="30">
                        <stop stop-color="#818cf8"/>
                        <stop offset="1" stop-color="#c084fc"/>
                    </linearGradient>
                </defs>
            </svg>
        </div>
        <h1 style="font-size: 1.25rem;">TalentAI</h1>
    </div>

    <ul class="nav-links">
        <li>
            <a href="/candidate" class="@(currentPath == "/candidate" ? "active" : "")">Dashboard</a>
        </li>
        <li>
            <a href="/candidate/feed" class="@(currentPath == "/candidate/feed" || currentPath.StartsWith("/candidate/job") ? "active" : "")">Explore Jobs</a>
        </li>
    </ul>

    <a href="/" onclick="fetch('/api/auth/logout', {method:'POST'}); sessionStorage.clear(); localStorage.clear();" class="logout-btn">Sign Out</a>
</aside>
