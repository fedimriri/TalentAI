@{
    ViewData["Title"] = "Admin Profile";
}

<div class="page-header">
    <h2>Admin Profile</h2>
    <p>Welcome to the TalentAI Administration Dashboard.</p>
</div>

<div class="auth-card" style="margin: 0; max-width: 600px;">
    <div style="display: flex; flex-direction: column; gap: 1rem;">
        <div class="form-group">
            <label>Email Address</label>
            <div style="padding: 1rem; background: rgba(255,255,255,0.03); border: 1px solid var(--border); border-radius: var(--radius);">
                @ViewBag.Email
            </div>
        </div>

        <div class="form-group">
            <label>Role</label>
            <div style="padding: 1rem; background: rgba(255,255,255,0.03); border: 1px solid var(--border); border-radius: var(--radius);">
                <span class="badge badge-admin">@ViewBag.Role</span>
            </div>
        </div>
    </div>
</div>
